<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.edu.softwareii.doglove.inicio.InicioFragment"
    >


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/iviFotoMascotaMatch"
        android:src="@drawable/bulldog"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Mango, 3 aÃ±os"
        android:id="@+id/tviNombreEdadMatch"
        android:textSize="30dp"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@+id/iviFotoMascotaMatch"
        android:layout_alignLeft="@+id/iviFotoMascotaMatch"
        android:layout_alignStart="@+id/iviFotoMascotaMatch" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="NO"
        android:id="@+id/butNO"
        android:background="@android:color/holo_red_dark"
        android:layout_gravity="left|bottom"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/iviFotoMascotaMatch"
        android:layout_alignLeft="@+id/iviFotoMascotaMatch"
        android:layout_alignStart="@+id/iviFotoMascotaMatch" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="YES"
        android:id="@+id/butYES"
        android:background="@android:color/holo_green_dark"
        android:layout_alignTop="@+id/butNO"
        android:layout_alignRight="@+id/iviFotoMascotaMatch"
        android:layout_alignEnd="@+id/iviFotoMascotaMatch" />


</RelativeLayout>
